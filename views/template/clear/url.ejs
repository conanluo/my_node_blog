<%-include header%>
                <div class="col-md-6 col-md-offset-3 clean-superblock" id="contact">
<script>
$(document).ready(function() {
    $('.org_url').summernote({
        //placeholder : 'placeholder',
        //disableDragAndDrop: true,
        //dialogsInBody: false,
        dialogsFade: false,
        lang : 'zh-CN',
        minHeight:200,  
        maxHeight:200,
        toolbar: false
    });
    $('#orgUrl').summernote('disable');   
})
</script>
 <%
if(G.shortUrlCode){
%>

<h4>your webside:</h4><textarea id='orgUrl' class='org_url'><%=G.orgUrl%></textarea>
<h4>your short cut: </h4>
<input type="text" class='input-lg' value='<%=G.shortUrlCode%>' style='width:100%'>


<%
}else{
 %> 
                    <h4>Please type your full Url <div class="text-danger">(including "http://" or "https://")</div></h4>
                    
                    <form action="/url" method="post" accept-charset="utf-8" class="contact-form">
                        <textarea type="text" name="url" id="url" placeholder="webside address" class="form-control input-lg org_url">http://</textarea>

    <%
    if(user){
    %>
                        <input type="hidden" name="user" value='<%=user.name%>'>
    <%
    }
    %>

                        <div class="buttons clearfix">
                            <button type="submit" class="btn btn-xlarge btn-clean-one">Submit</button>
                        </div>                    
                    </form>
<%}%>                    
                </div>
<%-include footer%>